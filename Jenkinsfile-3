pipeline{
    agent any
    environment {
        LANG = "en_US.UTF-8"
        ANSIBLE_PRIVATE_KEY=credentials('vagrant-private-key')
    }
    stages{
        stage("Check Ansible Version"){
            steps{
                sh '''
                    ansible-playbook webserver --private-key=$ANSIBLE_PRIVATE_KEY playbooks/apache-server.yaml
                '''
            }
        }
    }
}
